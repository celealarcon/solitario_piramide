<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cele.piramide.Settings">


    <TextView
        android:text="  Escoga un dorso para las cartas"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.216"
        android:id="@+id/textView" />

    <ImageButton
        android:src="@drawable/b1fv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="listenerDorsoAzul"
        android:background="@color/colorAccent"
        app:layout_constraintRight_toLeftOf="@+id/imageButton"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintVertical_bias="0.252" />

    <ImageButton
        android:src="@drawable/b2fv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="listenerDorsoRojo"
        android:background="@color/colorAccent"
        android:id="@+id/imageButton"
        android:layout_marginRight="70dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="226dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.885" />


</android.support.constraint.ConstraintLayout>
